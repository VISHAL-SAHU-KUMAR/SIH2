# .env.example (Template file - copy this to create your actual .env files)
# =============================================================================
# MEDICAL SYMPTOM CHECKER - ENVIRONMENT CONFIGURATION
# =============================================================================

# Flask Application Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=mysecretkey123

# Server Configuration
HOST=0.0.0.0
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration (if you plan to add database support later)
# DATABASE_URL=sqlite:///medical_checker.db
# DATABASE_TYPE=sqlite

# API Configuration
API_VERSION=1.0
API_RATE_LIMIT=100  # requests per hour per IP
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ML Model Settings
MODEL_CONFIDENCE_THRESHOLD=0.1
MAX_PREDICTIONS_RETURN=5
SIMILARITY_THRESHOLD=0.7

# Medical Safety Settings
EMERGENCY_DETECTION_ENABLED=True
MEDICAL_DISCLAIMERS_ENABLED=True
PROFESSIONAL_CONSULTATION_REQUIRED=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/medical_checker.log

# File Paths (relative to project root)
MODELS_DIR=models
DATABASE_DIR=database
LOGS_DIR=logs

# External APIs (if you plan to integrate with medical APIs later)
# MEDICAL_API_KEY=your-api-key-here
# MEDICAL_API_URL=https://api.medical-service.com
# MEDICATION_API_KEY=your-medication-api-key

# Email Configuration (for notifications, if needed)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# ADMIN_EMAIL=admin@yourdomain.com

# Security Settings
SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_SYMPTOM_LENGTH=1000
MAX_MEDICAL_HISTORY_LENGTH=2000

# Analytics (if you plan to add usage analytics)
# GOOGLE_ANALYTICS_ID=your-ga-id
# ENABLE_ANALYTICS=False

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT=30
CACHE_TIMEOUT=300  # 5 minutes

# Development/Testing Settings
TESTING=False
DEBUG_TOOLBAR=False
PROFILER_ENABLED=False